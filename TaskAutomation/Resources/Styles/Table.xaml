<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="HeaderTable">
        <Setter Property="TextAlignment"  Value="Center"/>
        <Setter Property="Background"  Value="WhiteSmoke"/>
    </Style>
    <Style TargetType="ComboBox" x:Key="ComboBoxTable">

    </Style>
    <Style TargetType="TextBox" x:Key="TextBoxTable">
        <Setter Property="TextWrapping"  Value="Wrap"/>
        <Setter Property="BorderThickness" Value="0.5 0.5 0.5 1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Padding"  Value="2"/>
    </Style>
    <Style TargetType="Border" x:Key="BorderTable">
        <Setter Property="BorderThickness" Value="1 1 0.5 0.5"/>
        <Setter Property="BorderBrush" Value="Gray"/>
    </Style>
    <Style TargetType="Border" x:Key="BorderCheckBoxTable">
        <Setter Property="BorderThickness" Value="0.5 0.5 0.5 1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
    </Style>
    <Style TargetType="CheckBox" x:Key="CheckBoxTable">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2"/>
    </Style>
</ResourceDictionary>